{
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "build:strict": "rollup -c --failAfterWarnings",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' nyc --reporter='../../coverage-relative-json-summary' --reporter=html --reporter=text mocha",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js,.svelte --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "svelte-check --tsconfig tsconfig.json",
    "dev": "npm run build && npm run type-check",
    "prepack": "npm run clean && npm run lint && npm run format:check && npm run type-check && npm run build:prod && npm test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/mocha": "^10.0.10",
    "@types/stylelint": "^13.13.3",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "assert": "^2.1.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "mocha": "^11.7.1",
    "npm-check-updates": "^18.0.1",
    "nyc": "^17.1.0",
    "prettier": "npm:@btmills/prettier@^3.3.3",
    "prettier-plugin-svelte": "^3.4.0",
    "rollup": "^4.44.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-svelte": "^7.2.2",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "svelte": "^5.35.1",
    "svelte-check": "^4.2.2",
    "svelte-preprocess": "^6.0.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "await-lock": "^3.0.0",
    "csscolorparser-ts": "^1.1.1",
    "tldts": "^7.0.10"
  }
}
